<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.example.sdm.cybk.ui.widget.Back
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/view_1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/conmunication" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="来到新的环境，在陌生的人群中，大家肯定有一定的兴奋与不安，因此，与远在它方的家人与朋友联系，成为我们初来此地分享快乐和缓解不安的主要途径。"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="手机"
                    android:textColor="#212121"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    android:text="在高中都已经普遍使用的手机，在大学自然也不再
                                    稀奇，处在中心食堂附近就有相关的服务网点，为
                                    有手机或是想买手机的同学提供服务。"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="信件"
                    android:textColor="#212121"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    android:text="收信：通常收发室（在旧校门口）会为每两三个班
级分配一个邮箱，由生活委员定期领取；收信：通
常收发室（在旧校门口）会为每两三个班级分配一
个邮箱，由生活委员定期领取；"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="包裹"
                    android:textColor="#212121"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    android:text="顺丰、申通、韵达等快递公司在学校都设有服务点，
同学们可以根据自己的需求选择快递公司，享受便
捷的快递服务。"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />

                <!-- 娱乐 -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/play_1" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="电影"
                    android:textColor="#212121"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    android:text="学校每周都会在科技会堂组织放映电影。"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="舞会"
                    android:textColor="#212121"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    android:text="学生活动中心多功能厅（太极体育场西看台二楼）
会定期举行全校性的舞会，很多学校的“舞林高手”
都会参与其中。"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="校外娱乐"
                    android:textColor="#212121"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    android:text="在校外也有很多的娱乐休闲场所，如酒吧、网吧、
迪厅、KTV等，至于感觉嘛……就要靠你们自己去
体会了！有时间，有精力的同学可以去放松一下，
不过，千万不要忘记学业哦！"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
