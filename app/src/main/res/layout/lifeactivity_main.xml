<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"

    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.sdm.cybk.ui.widget.Back
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            
    <!--吃-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/eat" />


                <TextView
                    android:id="@+id/eat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/eatplace1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#ff5722"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/eatplace2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#ff5722"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/eatplace3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#ff5722"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/eatplace4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#ff5722"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/eat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />

            </LinearLayout>

    <!--穿-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/wear" />

                <TextView
                    android:id="@+id/wear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />

            </LinearLayout>

    <!--住-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/live" />

                <TextView
                    android:id="@+id/live1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/live2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/live_closelight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:textColor="#9a9a9a"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/live_closelightTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="25dp"
                        android:textColor="#9a9a9a"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/live_closedoor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:textColor="#9a9a9a"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/live_closedoorTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="25dp"
                        android:textColor="#9a9a9a"
                        android:textSize="14sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/live3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/live4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/live5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />

            </LinearLayout>

    <!--行-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="25dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="24dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/walk" />

                <TextView
                    android:id="@+id/go1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/go2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/go3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/go4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/go5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textColor="#9a9a9a"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>